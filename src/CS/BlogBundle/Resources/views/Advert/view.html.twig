    Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block csblog_body %}
    
    {#<h2>{{ advert.title }}</h2>#}
    {#<i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>#}

    {#<div class="well">#}
        {#{{ advert.content }}#}
    {#</div>#}

    {#<p>#}
        {#<a href="{{ path('cs_blog_home') }}" class="btn btn-default">#}
            {#<i class="glyphicon glyphicon-chevron-left"></i>#}
            {#Retour à la liste#}
