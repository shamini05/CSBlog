{# src/OC/PlatformBundle/Resources/views/Advert/edit.html.twig #}

{% extends "CSBlogBundle::layout.html.twig" %}

{% block title %}
    Modifier un post - {{ parent() }}
{% endblock %}

{% block csblog_body %}

    <h2>Modifier une annonce</h2>

    {{ include("CSBlogBundle:Advert:form.html.twig") }}

    <p>
        Vous éditez une annonce déjà existante, merci de ne pas changer
        l'esprit générale de l'annonce déjà publiée.
    </p>

    <p>
        <a href="{{ path('cs_blog_view', {'id': advert.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à l'annonce
        </a>
    </p>

{% endblock %}